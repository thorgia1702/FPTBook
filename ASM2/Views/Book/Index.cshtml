@model IEnumerable<ASM2.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-uppercase">List of book</h1>

<p>
    <a asp-action="Create" class="btn btn-sm btnprimary rounded-0 text-uppercase"><i class="fas fa-plus-circle"></i>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
               ReleaseDate
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            <th>
                Image
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                 <img src="~/images/@item.Image"
                  class="rounded-circle"
                  height="40" width="40"
                  asp-append-version="true"/>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                <a asp-action="AddCart" asp-controller="Book" asp-route-id="@item.Id">AddCart</a>
            </td>
        </tr>
}
          
          
    </tbody>
</table>
